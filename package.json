{
  "name": "demo-project",
  "version": "1.0.0",
  "description": "checkout-web",
  "author": "Kat Chilton for Adyen",
  "main": "index.js",
  "scripts": {
    "test": "node_modules/.bin/karma start",
    "server": "node src/server/dev-server.js",
    "pug": "pug src/app/pug --out build/",
    "start": "node src/server/watchers.js dev & npm run generate:doc",
    "prod": "node_modules/.bin/snyk test && node src/server/watchers.js prod & npm run generate:doc",
    "lint": "npm run lint:js & npm run lint:style",
    "lint:js": "./node_modules/.bin/eslint src/app/js/**/*.js src/app/js/*.js",
    "lint:style": "node_modules/.bin/sass-lint -c ${npm_package_vars_sassLintConfig} -v ${npm_package_vars_src}${npm_package_vars_app}${npm_package_vars_style}*.scss ${npm_package_vars_src}${npm_package_vars_app}${npm_package_vars_style}**/*.scss",
    "generate:doc": "node_modules/.bin/jsdoc ${npm_package_vars_src}${npm_package_vars_app} -r -d ${npm_package_vars_out}${npm_package_vars_doc} -t node_modules/minami"
  },
  "vars": {
    "app": "app/",
    "out": "build/",
    "doc": "doc/",
    "index": "index",
    "jsdoc_config": "conf.json",
    "node_version": ">=6.11.4",
    "reports": "coverage/",
    "server": "server/dev-server.js",
    "sassLintConfig": "src/server/.sass-lint.yml",
    "src": "src/",
    "style": "style/",
    "test": "spec"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "env": {
      "development": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "esLintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "overrides": {
      "files": [
        "src/app/js/**/*.js",
        "src/app/js/*.js"
      ],
      "excludedFiles": "src/app/js/vendor/"
    },
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "jsx": true
      },
      "sourceType": "module"
    },
    "plugins": "react",
    "rules": {
      "indent": [
        "error",
        4
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-console": 0
    }
  },
  "devDependencies": {
    "autoprefixer": "^7.1.5",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "chalk": "^2.1.0",
    "eslint": "^4.8.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "express": "^4.16.2",
    "fs-jetpack": "^1.2.0",
    "istanbul": "^0.4.5",
    "jasmine": "^2.8.0",
    "jquery": "^3.2.1",
    "jsdoc": "^3.5.5",
    "karma": "^1.7.1",
    "karma-browserify": "^5.1.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.1",
    "karma-istanbul": "0.0.2",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-safari-launcher": "^1.0.0",
    "minami": "^1.2.3",
    "morgan": "^1.9.0",
    "node-sass": "^4.5.3",
    "phantomjs": "^2.1.7",
    "sass-lint": "^1.12.0",
    "uglify-js": "^3.1.3",
    "uglifyify": "^4.0.4",
    "watchify": "^3.9.0"
  }
}
